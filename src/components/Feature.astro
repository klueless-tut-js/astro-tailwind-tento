---
export interface Props {
  title: string;
  title_native: string;
  image: string;
  image_align?: string;
}

const { title, image, title_native, image_align = 'right' } = Astro.props as Props;
const imagePath = `/images/${image}`;
let baseContainerClass = 'flex flex-col items-center bg-white mt-20'

let image_align_class = image_align === 'left' ? 'lg:flex-row xl:mr-20 2xl:mr-40' : 'lg:flex-row-reverse xl:ml-20 2xl:ml-40';

let containerClass = `${baseContainerClass} ${image_align_class}`;

// let outerContainerClass = `relative mt-20 ${outerContainerClassExtra}`;
// let containerClass = 'container flex flex-col items-center justify-center gap-x-24' + (image_align === 'right' ? ' lg:flex-row' : ' lg:flex-row-reverse');
// let roundedRectangleClass = 'hidden lg:block overflow-hidden bg-bookmark-purple absolute h-80 w-2/4 -bottom-24' + (image_align === 'right' ? ' -left-36 rounded-r-full' : ' -right-36 rounded-l-full');
---

<div class={containerClass}>
  <!-- Image -->
  <div class="flex flex-1 justify-center z-10 mb-10 lg:mb-0 lg:w-1/2 lg:mr-4 xl:mr-8">
    <img
      class=""
      src={imagePath}
      alt=""
    />
  </div>

  <!-- Content -->
  <div class="px-4 lg:px-5 xl:px-6 2xl:px-16 lg:w-1/2 ">
    <h2 class="text-3xl text-black font-bold text-center">{title}</h2>

    <div class="relative flex py-3 items-center">
      <div class="flex-grow border-t border-black"></div>
      <h3 class="flex-shrink mx-4 text-black">{title_native}</h3>
      <div class="flex-grow border-t border-black"></div>
    </div>

    <div class="flex flex-1 flex-col items-center lg:items-start">
      <h1 class="text-3xl text-bookmark-blue">{title}</h1>
      <p class="text-bookmark-grey md:my-4 text-center lg:text-left sm:w-3/4 lg:w-full">
        <slot />
      </p>
    </div>
  </div>
</div>
