---
import PageLayout from '../layouts/PageLayout.astro';
import Hero from '../components/Hero.astro';
import Products from '../components/Products.astro';
import Features from '../components/Features.astro';
import Map from '../components/Map.svelte';
import ContactUs from '../components/ContactUs.astro';
import 'leaflet/dist/leaflet.css';

const location = { latitude: -33.8830627, longitude: 151.214763 };
---

<PageLayout title='Jinto'>
  <Hero />
  <Products />
  <Features />
  <section id="map" class="container mx-auto items-center mt-12 max-w-2xl py-12 px-4 sm:py-20 sm:px-6 lg:px-8 lg:max-w-7xl">
    <div class="bg-white p-4 shadow-inner">
      <Map client:load {location} zoom={17} markerMarkup="<p>We are here!</p>" />
    </div>
  </section>
  <ContactUs />
</PageLayout>
